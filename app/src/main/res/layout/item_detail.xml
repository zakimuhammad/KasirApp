<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvNamaDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Produk"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTotalDetail"/>

    <TextView
        android:id="@+id/tvTotalDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rp. 0000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNamaDetail"/>

    <TextView
        android:id="@+id/tvJumlahDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvNamaDetail"
        app:layout_constraintStart_toStartOf="@id/tvNamaDetail"/>

    <TextView
        android:id="@+id/tvKali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tvJumlahDetail"
        app:layout_constraintTop_toBottomOf="@id/tvNamaDetail"/>

    <TextView
        android:id="@+id/tvHargaDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvNamaDetail"
        app:layout_constraintStart_toEndOf="@id/tvKali"/>
</androidx.constraintlayout.widget.ConstraintLayout>